<%= render :partial => "club" %>

<div class="content-main">
<%= title "Pasfoto" %>

<%# TODO: uitleg van ISIC + opmerkingen voor geldige pasfoto %>

<% if @member.photo? %>
<div class="crop-wrapper">
  <h3>Foto bijsnijden</h3>

  <%= semantic_form_for @member, :url => registration_photo_path(@club) do |f| %>
    <%= image_tag @member.photo.url(:large), :id => "crop-image" %>

    <span>Voorbeeld:</span>
    <div id="crop-preview">
      <%= image_tag @member.photo.url(:large) %>
    </div>

    <%= f.inputs do %>
      <% for crop_attr in [:crop_x, :crop_y, :crop_w, :crop_h] %>
        <%= f.input crop_attr, :as => :hidden %>
      <% end %>
    <% end %>

    <%= f.buttons :class => "member no-indent" do %>
      <%= f.commit_button "Selectie vastleggen" %>
    <% end %>
  <% end %>
</div>

<h3>Een andere foto kiezen?</h3>
<% end %>

<%= semantic_form_for @member, :url => registration_photo_path(@club) do |f| %>
  <%= f.inputs do %>
    <%= f.input :photo %>
  <% end %>

  <%#
