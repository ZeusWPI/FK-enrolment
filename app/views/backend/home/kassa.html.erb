<%= title "Kassa: lid opzoeken" %>

<%= form_tag search_backend_members_path, :id => 'search-form', :remote => true do %>
  <%= select_tag 'search_field',
        options_for_select({'UGent-nummer' => 'ugent_nr',
                            'Naam'         => 'name',
                            'Email-adres'  => 'email'}) %>
  <%= text_field_tag 'search_value', params[:search_value] %>
  <%= submit_tag "Zoek" %>
<% end %>

<div id="search-results">
</div>
