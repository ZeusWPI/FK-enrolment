<h2>Welkom</h2>

<p>Kies welke kring je wil beheren.</p>

<table class="shield-picker">
  <tr>
    <% @clubs.each_with_index do |club, i| %>
      <%= raw("</tr><tr>") if i > 0 && i % 4 == 0 %>
      <td><a href="<%= url_for backend_switch_club_path(club) %>">
      <%= image_tag(club.shield_path(:small)) %>
      <%= club.full_name %>
      </a></td>
    <% end %>
  </tr>
</table>
