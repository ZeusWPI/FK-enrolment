<%= title "Kringinstellingen #{@club.name}" %>

<%= semantic_form_for @club, :url => backend_settings_path do |f| %>
  <%= f.inputs do %>

    <%= f.input :description, :as => :text,
        :label => "#{@club.name} is de â€¦",
        :input_html => {:cols => 40, :rows => 4 } %>
    <%= f.input :isic_text, :as => :text,
        :hint => "Extra informatie die bij de ISIC-promo getoond wordt.",
        :input_html => {:cols => 40, :rows => 4 } %>
    <%= f.input :confirmation_text, :as => :text,
        :hint => "Tekst na registratie.",
        :input_html => {:cols => 40, :rows => 4 } %>
    <%= f.input :registration_method, :as => :select,
      :collection => {"Geen" => "none", "API" => "api", "Website" => "website"} %>
    <%= f.input :uses_isic, :wrapper_html => { :class => "no-indent" } %>
    <li><label>API sleutel</label><code><%= @club.api_key %></code></li>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button "Wijzigen" %>
  <% end %>
<% end %>
