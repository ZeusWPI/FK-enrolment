<tbody>
<% @members.each do |member| %>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%= member.first_name %> <%= member.last_name %></td>
    <td><%= member.ugent_nr %></td>
    <td><%= member.email %></td>
    <td><%= member.card_number %></td>
    <td><%= l member.created_at, :format => :short %></td>
    <td><%= icon("Details", "details", backend_member_path(member)) %></td>
  </tr>
<% end %>
</tbody>
</table>

