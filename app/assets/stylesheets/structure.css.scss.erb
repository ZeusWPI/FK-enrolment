@import "common";

#wrapper {
  background: image-url('<%= asset_path "main-wrapper.gif" %>') repeat-x top;
}

#header {
  @include row;
  height: 75px;
  position: relative;

  h1 {
    font-size: 30px; font-weight: bold;
    position: absolute;
    height: 80px; bottom: -20px;
    background: image-url('<%= asset_path "fk-logo.jpg" %>') no-repeat left;

    a {
      display: block;
      text-decoration: none;
      color: #FFF;
      @include single-text-shadow(#000);
      padding: 25px 0 30px 100px;
    }
  }
}

#main {
  @include row;
  padding: 40px 0 10px 0;
  @include clearfix;
}

.content {
  @include col(17);
}

.sponsors {
  @include col(6);
  @include last;
  @include float-right;

  h3 {
    @include leader(1, 15px);
  }
}

.club-shield {
  @include col(4);
  font-weight: 900;
  text-align: center;
  @include adjust-font-size-to(15px, 0.9);

  img { margin: 0 auto 10px; }
}

.option-elem {
  color: #000;
  padding: 15px 20px 15px 42px;
  background: image-url('<%= asset_path "selector-arrow.png" %>') no-repeat #EEE;
  background-position: 14px center;

  &:hover {
    background-color: #F9F9F9;
    text-decoration: none;
  }
}
.option-button {
  @extend .option-elem;
  border: 1px solid #AAA;
  cursor: pointer;
  margin: 15px 0;
  width: 100%;
  text-align: left;
}

.option-chooser {
  margin-top: 30px;
  list-style: none;
  padding: 0;

  li {
    margin: 15px 0;
    border: 1px solid #AAA;

    a {
      @extend .option-elem;
      display: block;
} } }


.flash {
  padding: 5px 10px;
  margin-bottom: 8px;
  border: 1px solid;
  @include col(17);
  @include append(6);

  &.warning, &.alert, &.error {
    color: $error-color;
    border-color: $error-color;
  }

  &.success, &.notice {
    color: $success-color;
    border-color: $success-color;
  }
}

@import "compass/layout/sticky-footer";
@include sticky-footer(81px, "#wrapper", "#wrapper-footer", "#footer");

#footer {
  @include row;
  border-top: dotted 1px #E1E1E1;
  margin: 20px auto 10px auto;
  padding: 10px 0;
  height: 30px !important;

  p {
    text-align: center;
    font-size: 11px; line-height: 15px;
    margin: 0;
  }
}
